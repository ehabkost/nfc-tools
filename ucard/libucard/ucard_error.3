.Sh SYNOPSIS
.In ucard.h
.Ft int
.Fn ucard_errno "struct ucard *ucard"
.Ft void
.Fn ucard_perror "struct ucard *ucard" "const char *message"
.Ft int
.Fn kiosk_errno "struct kiosk *kiosk"
.Ft void
.Fn kiosk_perror "struct kiosk *kiosk" "const char *message"
.Ft const char *
.Fn libucard_strerror "int errnum"
.Ft char *
.Fn libucard_strerror_r "const int errnum" "char *strbuf" "const size_t buflen"
